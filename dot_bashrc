#
# ~/.bashrc
#

# If not running interactively, don't do anything
[[ $- != *i* ]] && return

# Git prompt
source '/usr/share/git/completion/git-prompt.sh'
alias ls='ls --color=auto'
alias grep='grep --color=auto'
alias vim='nvim'
PS1='[\u@\h \W$(__git_ps1 " (%s)")]\$'

export EDITOR=nvim
alias ip="ip -color=auto"

